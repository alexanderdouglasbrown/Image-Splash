<% include ../partials/header %>

<div class="row splashes">
    <% splashes.forEach((splash) => { %>
        <div class = "col-sm-6 col-md-4 col-xl-3">
            <a href="/splash/<%= splash._id %>" class="splash-link">
                <img class="splash-image" src="https://res.cloudinary.com/hpzzynrei/image/upload/w_500,h_500,c_thumb,g_face/v1524635540/<%= splash.public_id %>.<%= splash.format %>"
                />
            </a>
        </div>
    <% }) %>
</div>

<nav class="pagination">
    <% if (Number(page) > 1) { %>
        <li class="page-item prev-next"><a class="page-link" href="/splash?page=<%= Number(page) - 1 %>">Previous</a></li>
    <% } %>
    <% if ((Number(page) + 1) <= maxPages) { %>
        <li class="page-item prev-next"><a class="page-link" href="/splash?page=<%= Number(page) + 1 %>">Next</a></li>
    <% } %>
</nav>

<% include ../partials/footer %>